---
import ReadmeContent from '../components/ReadmeContent.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import '../styles/content.css';
import { ViewTransitions } from 'astro:transitions';

const title = "evalla - Safe math evaluator";
const description = "Safe math evaluator with variables, dependencies, and precision";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Borel&display=swap" rel="stylesheet">
  <ViewTransitions />
</head>
<body class="min-h-screen bg-white">
  <Header currentPage="home" />
  
  <main class="max-w-5xl mx-auto px-4 sm:px-8 lg:px-12 pb-6">
    <ReadmeContent />
  </main>

  <Footer />
</body>
</html>
