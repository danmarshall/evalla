---
import ReadmeContent from '../components/ReadmeContent.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/content.css';

const title = "evalla - Safe math evaluator";
const description = "Safe math evaluator with variables, dependencies, and precision";
---

<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Borel&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/atom-one-dark.min.css">
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
  <Header currentPage="home" />
  
  <main class="flex-1 container mx-auto px-4 sm:px-6 py-6 sm:py-8 max-w-5xl">
    <div class="bg-white rounded-lg shadow-lg p-4 sm:p-6 md:p-8">
      <ReadmeContent />
    </div>
  </main>

  <Footer />
</body>
</html>
