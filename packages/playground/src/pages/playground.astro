---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PlaygroundApp from '../components/PlaygroundApp';
import { ViewTransitions } from 'astro:transitions';

const title = "Evalla Playground";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Borel&display=swap" rel="stylesheet">
  <ViewTransitions />
</head>
<body class="min-h-screen bg-white">
  <Header currentPage="playground" />
  
  <main class="max-w-5xl mx-auto px-4 sm:px-6 md:px-8 py-6">
    <PlaygroundApp client:load transition:persist />
  </main>

  <Footer />
</body>
</html>
